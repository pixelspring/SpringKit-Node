    "dotenv": "^2.0.0",
    "express": "^4.14.0",
    "express-flash": "0.0.2",
    "express-session": "^1.14.2",
    "express-status-monitor": "^0.1.7",
    "express-validator": "^3.1.2",
    "knex": "^0.12.6",
    "lusca": "^1.4.1",
    "method-override": "^2.3.7",
    "moment": "^2.17.1",
    "morgan": "^1.7.0",
    "mysql": "^2.12.0",
    "node-sass": "^4.1.1",
    "nodemailer": "^2.7.0",
    "nodemon": "^1.11.0",
    "npm-run-all": "^3.1.2",
    "nunjucks": "^3.0.0",
    "nunjucks-date-filter": "^0.1.1",
